{
    "author": "Guilherme Nascimento",
    "name": "Prevent Duplicate Tabs",
    "description": "Prevent duplicate tabs",
    "version": "0.8.0",
    "manifest_version": 3,
    "default_locale": "en",
    "icons": {
        "16": "images/16x.png",
        "32": "images/32x.png",
        "48": "images/48x.png",
        "128": "images/128x.png"
    },
    "action": {
        "default_icon":  "images/16x.png",
        "default_popup": "views/popup.html#popup"
    },
    "options_ui": {
        "page": "views/popup.html#config",
        "open_in_tab": false
    },
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "js/detect-trusted-fill-fields.js"
            ],
            "run_at": "document_idle"
        }
    ]
}
